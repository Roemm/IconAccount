<div>
    <h1>Sign Up</h1>
    <form action='/' method='post'>
        <h2>Username</h2><input type='text' placeholder='Username' name="username"> <br>
        <h2>Password</h2><input type='text' placeholder='Password' name="password">
        <input type='submit' value='Create Account'>
    </form>

    {{#if error}}
      <p>{{error}}</p>
    {{/if}}

</div>